<%= render "shared/errors", obj: @article  %>

<div class= "col-xs-12">
        
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form" }) do |f| %>
        
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, placeholder: "Enter title.", class: "form-control col-sm-5", autofocus: true %>
        </div>
            
        <div class="form_group">
            <%= f.label :description %>
            <%= f.text_area :description, placeholder: "Body of article.", class: "form-control col-sm-5", rows: 10 %>        
        </div>
    
        </br>
    
        <div class="form_group">
                <%= f.submit class: "btn btn-primary btn-lg col-sm-5" %>
        </div>
        
    <% end %>
    
</div>


</br>

