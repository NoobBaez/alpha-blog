<h1>Liting all articles</h1>

<%= link_to "New article", new_article_path %>

<table>
    
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    
    <% @articles.each do |t| %>
        <tr>
            <td><%= t.title %></td>
            <td><%= t.description %></td>
            <td><%= link_to "Edit", edit_article_path(t) %></td>
            <td><%= link_to "Show", article_path(t) %></td>
            <td><%= link_to "Delete", article_path(t), method: :delete, data: {confirm:  "Are you sure?"}%></td>
        </tr>    
    <% end %>
    
    
</table>

