<%= render 'shared/errors', obj: @user %>

<div class= "col-xs-12">
        
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form" }) do |f| %>
        
        <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, placeholder: "Enter User name.", class: "form-control col-sm-5", autofocus: true %>
        </div>
            
        <div class="form_group">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: "Email.", class: "form-control col-sm-5" %>        
        </div>
    
        <div class="form_group">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Enter password", class: "form-control col-sm-5" %>        
        </div>
    
        
        </br>
        
    
        <div class="form_group">
                <%= f.submit( @user.new_record? ? "Sing up" : "Update account", class: "btn btn-primary btn-lg col-sm-5") %>
        </div>
        
    <% end %>
    
</div>


