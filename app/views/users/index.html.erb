<h2 aling="center">Users</h2>
<%= will_paginate @user %>
<% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="wel col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li><%= link_to user.username, user_path(user) %></li>
                <smal><li><%= pluralize(user.articles.count, "article") if user.articles %></li></smal>
            </div>
        </div>
    </ul>
<% end %>